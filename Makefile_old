comp = pdflatex #-interaction=batchmode
bib = bibtex -terse
nomfich = rapport
nombib = ref

all: $(nomfich).pdf $(nombib).bib

rapport.pdf: $(nomfich).tex $(nombib).bib $(nomrep)/$(nomgnu)
	@$(comp) $(nomfich).tex
	@$(bib) $(nomfich)
	@$(comp) $(nomfich).tex
	@$(comp) $(nomfich).tex
	@rm -f *.toc *.cb *.cb2 *.bbl *.log *.out *.log *.blg *.aux *.bak

clear:
	@rm -f *.toc *.cb *.cb2 *.bbl *.log *.out *.log *.blg *.aux *.bak

